LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;

PACKAGE alarm_clock_package IS
	FUNCTION dispSSD (SIGNAL S: INTEGER) RETURN UNSIGNED;
END alarm_clock_package;

PACKAGE BODY alarm_clock_package IS
	FUNCTION dispSSD (SIGNAL S: INTEGER) RETURN UNSIGNED IS

	BEGIN
	
	WITH S SELECT
		F <= "0000001" WHEN 0,
			"1001111" WHEN 1,
			"0010010" WHEN 2,
			"0000110" WHEN 3,
			"1001100" WHEN 4,
			"0100100" WHEN 5,
			"0100000" WHEN 6,
			"0001111" WHEN 7,
			"0000000" WHEN 8,
			"0000100" WHEN 9,
			"1111110" WHEN OTHERS; --Displays a dash (-)
	END FUNCTION dispSSD;
END alarm_clock_package;